ruby "2.0.0"
source 'https://rubygems.org'

gem 'rails', '3.2.13'

# database
gem 'sqlite3'

# forms, html, css, javascript
gem "haml"
gem "haml-rails"
gem 'jquery-rails'
gem "simple_form"

# image
gem 'carrierwave'
gem 'rmagick'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap-sass'
  gem 'jquery-fileupload-rails'
end

group :development do
  gem "quiet_assets"
end
